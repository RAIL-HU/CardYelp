<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Store</title>
</head>
<body>
    <h1>Edit Store</h1>

    <form action="/stores/<%= store._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Store Name: </label>
            <input type="text" id="title" name="store[title]" value="<%= store.title %>" placeholder="Store Name">
        </div>

        <div>
            <label for="price">Price: </label>
            <input type="number" id="price" name="store[price]" value="<%= store.price %>" placeholder="Price">
        </div>

        <div>
            <label for="cardgame">Card Game: </label>
            <select id="cardgame" name="store[cardgame]">
                <% for (let game of games){ %>
                    <option value="<%= game %>"><%= game.charAt(0).toUpperCase() + game.slice(1) %></option>
                <% } %>
            </select>
        </div>

        <div>
            <label for="description">Description: </label>
            <input type="text" id="description" name="store[description]" value="<%= store.description %>" placeholder="Description">
        </div>

        <div>
            <label for="location">Address: </label>
            <input type="text" id="location" name="store[location]" value="<%= store.location %>" placeholder="Address">
        </div>

        <div>
            <label for="recurrence">Tournament On: </label>
            <select id="recurrence" name="store[recurrence]">
                <% for (let r of recurrence){ %>
                    <option value="<%= r %>"><%= r.charAt(0).toUpperCase() + r.slice(1) %></option>
                <% } %>
            </select>
        </div>

        <div>
            <label for="time">Start Time: </label>
            <input type="number" id="time" name="store[time]" value="<%= store.time %>" placeholder="Num Only, ex. 1300 for 1pm">
        </div>

        <button>Update</button>
    </form>

    <footer>
        <a href="/stores/<%= store._id %>">Back</a>
        <a href="/stores">All Card Stores</a>
    </footer>
</body>
</html>